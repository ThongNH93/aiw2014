<script>
    $(window).load(function () {
        $('.slider')._TMS({
            show: 0,
            pauseOnHover: false,
            prevBu: '.prev',
            nextBu: '.next',
            playBu: false,
            duration: 800,
            preset: 'random',
            pagination: false, //'.pagination',true,'<ul></ul>'
            pagNums: false,
            slideshow: 8000,
            numStatus: false,
            banners: true,
            waitBannerAnimation: false,
            progressBar: false
        });
        $("#tabs").tabs();
        $().UItoTop({
            easingType: 'easeOutQuart'
        });
    });
</script>

<div class="main">
  <div class="container_12">
    <div class="grid_12">
      <div class="slider-relative">
        <div class="slider-block">
          <div class="slider"> <a href="#" class="prev"></a><a href="#" class="next"></a>
            <ul class="items">
              <li><img src=<%= image_path("images/slide.jpg") %> alt="">
                <div class="banner">
                  <div>THERE ARE PLENTY OF PLACES</div>
                  <br>
                  <span> that are worth seeing</span> </div>
              </li>
              <% @top_images.each do |image| %>
                  <li><img src=<%=image_path(image.image)%> alt=""></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="content">
    <div class="container_12">
      <div class="grid_12">
        <h3>Vietnam Famous Destinations</h3>
      </div>
      <div class="boxes">
        <div class="grid_4">
          <figure>
            <div><img src=<%= image_path("images/page1_img1.jpg") %> alt=""></div>
            <figcaption>
              <h3>Northern Vietnam</h3>
              Hanoi – crowded old quarter; Sapa – most nature beauty mountains in Vietnam; Ha Long Bay – The seven wonder of the world; Ninh Binh – The Ha Long Bay in land, beauty country side with a lot of limestone
              <%= link_to "Details", home_area_path(Area.find_by_name("NORTHERN VIETNAM").id), :class => "btn" %>
            </figcaption>
          </figure>
        </div>
        <div class="grid_4">
          <figure>
            <div><img src=<%= image_path("images/page1_img2.jpg") %> alt=""></div>
            <figcaption>
              <h3>Central Vietnam</h3>
              Take four of Vietnam’s most compelling destinations — Da Nang, Hoi An, Hue and Lang Co — and what do you get? One magnificent experience: Central Coast Vietnam.
              <%= link_to "Details",home_area_path(Area.find_by_name("CENTRAL VIETNAM").id), :class => "btn" %>
            </figcaption>
          </figure>
        </div>
        <div class="grid_4">
          <figure>
            <div><img src=<%= image_path("images/page1_img3.jpg") %> alt=""></div>
            <figcaption>
              <h3>Southern Vietnam</h3>
              Southern Vietnam covers the Mekong Delta and the area around Ho Chi Minh City (Saigon), Vietnam. As all deltas, it receives the bounty of the siltation from the upper Mekong, and as such is a very rich and lush area, covered with rice fields
              <%= link_to "Details",home_area_path(Area.find_by_name("SOUTHERN VIETNAM").id), :class => "btn" %>
            </figcaption>
          </figure>
        </div>
        <div class="clear"></div>
      </div>
      <div class="grid_8">
        <div id="tabs" >
          <ul>
            <li><a href="#tabs-1">last minute</a></li>
            <li><a href="#tabs-2">popular post</a></li>
          </ul>

          <% @last_minutes.each do |location| %>
              <div class="tab_cont" id="tabs-1">
                <%= link_to home_location_path(location.id) do %>
                    <img src=<%= image_path(location.image) %> alt="" height="150px" width="300px">
                <% end %>
                <div class="extra_wrapper">
                  <%= link_to location.name, home_location_path(location.id), :class =>  "text1" %>
                  <p class="style1"><%= location.created_at.to_s.html_safe %></p>
                  <p class="style1"><%= location.description %></p>
                  <%= link_to 'Details', home_location_path(location.id), :class => "btn" %>
                </div>
              </div>
          <% end %>


        </div>
      </div>
      <div class="grid_4">
        <div class="newsletter_title">Province </div>
        <div class="n_container">
            <form id="newsletter" action="#">
            <div class="success">Your subscribe request has been sent!</div>
            <div class="text1">Sign up to receive our newsletters </div>
            <label class="email">
                <input type="email" value="email address" >
                <span class="error">*This is not a valid email address.</span> </label>
                <div class="clear"></div>
                <a href="#" class="" data-type="submit"></a>
            </form>
          <%= form_tag home_search_path, method: :get do %>
              <div>
                <%= text_field_tag :search, params[:search],
                                   placeholder: 'Search province', type: :search, style: 'width: 200px' %>
              </div>
              <div><%= submit_tag 'Search' %></div>
          <% end %>
          <ul class="list">
            <!--<li><a href="#">Hanoi </a></li>-->
            <!--<li><a href="#">Haiphong </a></li>-->
            <!--<li><a href="#">Saigon </a></li>-->
            <!--<li><a href="#">Hue </a></li>-->
            <!--<li><a href="#">Cantho </a></li>-->
            <!--<li><a href="#">Nhatrang </a></li>-->
            <!--<li><a href="#">Halong Bay </a></li>-->
          <% @provinces.each do|province| %>
            <li><%= link_to province.name, home_province_path(province.id)%></li>
          <% end %>
          </ul>
        </div>
      </div>
      <div class="clear"></div>
    </div>
  </div>

</div>
